doctype html
html
  head
    title SuAVE
  body
    .container-fluid
      .row
        .col-xs-8.col-xs-offset-2.col-lg-6.col-lg-offset-3
          .jumbotron#comment-template
            .row
              #chart_div.col-xs-8.col-xs-offset-2(style='display: block;')
            .row
              .col-xs-8.col-xs-offset-2.col-lg-6.col-lg-offset-3
                #button-group
                  button.btn.btn-raised.btn-info#show-snapshot(type='button') Show
                  button.btn.btn-raised.btn-info#show-about(type='button') About
                  button.btn.btn-raised.btn-info#share-snapshot(type='button', data-toggle='modal', data-target='#share-dialog') Share
            .row#para-panel
              .col-xs-8.col-xs-offset-2.col-lg-6.col-lg-offset-3
                .panel.panel-info
                  .panel-heading(style="text-align: center;")
                    h3.panel-title
                  .panel-body#para-table(style="text-align: center;")
                    table.table.table-striped.table-hover
                      tbody#panel-para
            .row
              .col-xs-6.col-xs-offset-2.col-lg-4.col-lg-offset-3
                .form-group.label-floating#comment-part
                  label.control-label(for='newComment') Add new comment:
                  textarea#newComment.form-control(style="width:100%;")
              .col-xs-1
                button.btn.btn-raised.btn-info#add-comments(type='button' ) Add
      #share-dialog.modal.fade
        .modal-dialog
          .modal-content
            .modal-header
              button.close(type='button', data-dismiss='modal', aria-hidden='true') Ã—
              h4.modal-title Share
            .modal-body
              p
                | Link:
              p#share-link
            .modal-footer
              button.btn.btn-danger(type='button', data-dismiss='modal') Dismiss




