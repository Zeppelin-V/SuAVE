raiseText()
	color grey
	text-shadow  -1px 1px 0 white
	-moz-text-shadow  -1px 1px 0 white
	-webkit-text-shadow  -1px 1px 0 white

body
	margin  0
	padding  0
	height  100%

// login form //

#main-container
	margin 50px auto auto 20px

#login-container
	width 340px
	margin 160px auto
	label
		margin 15px 0 5px 5px
	button
		width 150px
		padding 6px 35px 6px 35px
		float left
		margin-top 15px
	.checkbox
		margin 23px 0 0 180px
	.btm-links
		text-align center
		margin-top 10px
	#create-account
		float right
		margin-right 13px
	#forgot-password
		float left
		margin-left 10px

// account form on signup & home page //

#account-form-container
	width 460px
	margin 100px auto
#country-list
	width 310px
.modal-form-errors li
	raiseText()
	color #D8000C

// retrieve password window //

.modal-single-input
	width 452px
	margin -200px 0 0 -232px
	form
		raiseText()
		margin-bottom 0
		#cancel
			right 110px
		#submit
			float:right
	.modal-body
		height:100%
	.modal-footer
		clear:both
		height 20px
		button
			width 80px
			margin-top -4px
			margin-right 2px

.modal-alert
	width 400px
	margin -200px 0 0 -150px

// logged-in page //

#btn-addNew
	width 150px
	top 1px
	right 330px
	position absolute

#btn-logout
	width 120px
	top 1px
	right 8px
	position absolute

#btn-back
	width 120px
	top 1px
	right 140px
	position absolute

#btn-update
	top 1px
	right 137px
	position absolute

// support pages //

#print
	padding 20px
#four04
	padding 20px

// general shared rules //

.clear-fix
	clear both
.well
	margin-left 0
	border 1px solid #CCC
.form-horizontal
	.control-label
		width 80px
	.controls
		margin-left 120px
	.form-buttons
		float right
		margin-right 30px
		.btn
			width 80px
			margin-left 8px
	input
		width 300px
label
	raiseText()
.subheading
	raiseText()
	margin-top 3px
button i
	padding-left 8px
